<div class="bg-blue">
      <div class="container p-3">
        <div class="row">
          <div class="col-md-8">
            <h3>Your inquiries</h3>
            <p>You can ask questions to car owners renters via the platform</p>
          </div>
        </div>
      </div>
</div>


<div class="container">
  <h2><%= current_user %>, all your booking's requests:</h2>

    <% @bookings.cars.each do |booking| %>
      <% if booking.status == nil %>
      <div class="card-trip card-booking">
        <h2><%= car.model.capitalize %></h2>
        <p><%= booking.user%> </p>
        <br>
        <div class="card-booking-content">
        <%= booking.car_id %>
        <br>
          <%= link_to "Accept", booking_accept_path(booking), class: "btn btn-primary", method: :patch %>
          <%= link_to "Reject", booking_reject_path(booking), class: "btn btn-secondary", method: :patch %>
      <% else %>
      <div class="card-trip card-booking accepted">
        <h2><%= booking.car.model.capitalize %></h2>
        <p><%= booking.user %> </p>
        <br>
        <div class="card-booking-content">
        <%= booking.car_id %>
        <br>
          <p class="accepted">Accepted</p>
      <% end %>
      </div>
      </div>
    <% end %>
</div>
</div>


<div class="container">
<div class="notification">
  <img src='https://kitt.lewagon.com/placeholder/users/cveneziani' class="avatar-large" />
  <div class="notification-content">
    <p><small>Sep 1st</small></p>
    <p class="text-success">Hi Choe! Your request has just been approved.</p>
  </div>
  <div class="notification-actions">
    <a href="#">Edit <i class="fas fa-pencil-alt"></i></a>
    <a href="#">Delete <i class="far fa-trash-alt"></i></a>
  </div>
</div>
</div>

