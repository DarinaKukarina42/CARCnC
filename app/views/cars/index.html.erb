<h1>Cars available in <%= @location %> from <%= @start_date %> to <%= @end_date %></h1>


  <div class="row justify-content-start">
    <% @cars.each do |car|  %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card" style="width: 18rem;">
          <%= image_tag car.photo.variant(resize_to_limit: [240, 286]) if car.photo.attached? %>
          <div class="card-body">
            <h4 class="card-title"><strong><%= car.model %></strong></h4>
            <p><%= car.capacity %> persons</p>
            <p><%= car.price %>$ /per day</p>
            <%= link_to "Book now", car_path(car), class: "btn btn-info" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
