<div class="container">
  <h2>Available cars</h2>
  <a href="http://localhost:3000/cars/new" class="btn btn-outline-warning">Add a new car ?</a>
  <p> </p>
    <div class="row justify-content-center">
      <% @cars.each do |car|  %>
        <div class="col-sm-12 col-md-6 col-lg-4">
          <div class="card" style="width: 18rem;">
            <%= cl_image_tag car.photo.key, height: 180, width: 286, crop: :fill %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to car.model, car_path(car) %></h5>
              <a href="http://localhost:3000/cars/car_id/bookings/new" class="btn btn-primary">Book now</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <p> </p> 
  <a href="http://localhost:3000/users/sign_in" class="btn btn-info">Sign-in</a>
  <p> </p> 
</div>
